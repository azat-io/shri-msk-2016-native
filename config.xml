<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Alarm+</name>
    <description>
        Alarm of the new generation
    </description>
    <author email="to@azat.io" href="http://azat.io">
        Azat S.
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <plugin name="cordova-plugin-indexeddb-async" spec="~0.0.1" />
    <plugin name="de.appplant.cordova.plugin.background-mode" spec="0.6.4" source="pgb" />
    <icon src="icon.png" />
    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="www/res/icon/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/icon-192-xxxhdpi.png" />
        <splash density="land-ldpi" src="www/res/screen/android/screen-hdpi-landscape.png" />
        <splash density="land-mdpi" src="www/res/screen/android/screen-hdpi-portrait.png" />
        <splash density="land-hdpi" src="www/res/screen/android/screen-ldpi-landscape.png" />
        <splash density="land-xhdpi" src="www/res/screen/android/screen-ldpi-portrait.png" />
        <splash density="land-xxhdpi" src="www/res/screen/android/screen-mdpi-landscape.png" />
        <splash density="land-xxxhdpi" src="www/res/screen/android/screen-mdpi-portrait.png" />
        <splash density="port-ldpi" src="www/res/screen/android/screen-xhdpi-landscape.png" />
        <splash density="port-mdpi" src="www/res/screen/android/screen-xhdpi-portrait.png" />
        <splash density="port-hdpi" src="www/res/screen/android/screen-xxhdpi-landscape.png" />
        <splash density="port-xhdpi" src="www/res/screen/android/screen-xxhdpi-portrait.png" />
        <splash density="port-xxhdpi" src="www/res/screen/android/screen-xxxhdpi-landscape.png" />
        <splash density="port-xxxhdpi" src="www/res/screen/android/screen-xxxhdpi-portrait.png" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
